<h1> Doggy Page </h1>


    <div id="show">
    <h2><%= @dog.name %></h2>
    <%= image_tag @dog.img %>


<% if admin?%>
    <% if @dog.users %>
        <% @dog.users.each do |u|%>
        <h3>Dog has been dopted by :<%= u.name %></h3>
        <% end%>
    <% end %>
<% end %>

<% if logged_in? && admin?%>
<%= link_to "Delete Dog", dog_path(@dog), :method => :delete %> ||

<%= link_to "Edit Dog", edit_dog_path(@dog) %>
<% end %>
